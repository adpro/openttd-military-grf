if (is_aircraft_airlifter_enabled(param_aircraft_enable_us)){
    item (FEAT_AIRCRAFT, item_air_c124) {
        property {
            name:                           string(STR_NAME_AIR_C124);
            climates_available:             bitmask(CLIMATE_TEMPERATE, CLIMATE_ARCTIC, CLIMATE_TROPICAL);
            introduction_date:              date(1949,11,27);
            model_life:                     6;
            /* retire_early not set, use default retirement behaviour */
            vehicle_life:                   24;
            reliability_decay:              5;
            refittable_cargo_classes:       bitmask(CC_MAIL, CC_EXPRESS, CC_ARMOURED, CC_PIECE_GOODS, CC_LIQUID, CC_REFRIGERATED, CC_HAZARDOUS, CC_COVERED, CC_OVERSIZED, CC_NON_POURABLE, CC_NEO_BULK);
            non_refittable_cargo_classes:   bitmask(CC_PASSENGERS, CC_BULK);
            loading_speed:                  18;
            cost_factor:                    7;
            running_cost_factor:            15;
            /* cargo_age_period is left at default */

            /* airplane-specific properties */
            sprite_id:                      SPRITE_ID_NEW_AIRCRAFT; //enable new graphics
            speed:                          489 km/h;
            range:                          1298;
            misc_flags:                     bitmask(AIRCRAFT_FLAG_2CC, AIRCRAFT_FLAG_AUTOREFIT);
            refit_cost:                     0; // Refitting is free
            /* callback_flags are not set, no need to manually enable callbacks */
            aircraft_type:                  AIRCRAFT_TYPE_SMALL; // Take-off 2300m https://books.google.cz/books?id=tW6TNBAoOGIC&pg=RA2-PA1147&lpg=RA2-PA1147&dq=douglas+c-124+%22takeoff+distance%22&source=bl&ots=wOrC_rXJg9&sig=ACfU3U39ZaGtTXum9gqIneJ4vElrFZ6tcw&hl=cs&sa=X&ved=2ahUKEwitkPPu4L7wAhWLzKQKHZA6BdcQ6AEwEnoECAsQAw#v=onepage&q=douglas%20c-124%20%22takeoff%20distance%22&f=false
            acceleration:                   25;
            passenger_capacity:             0;
            mail_capacity:                  0;
            sound_effect:                   SOUND_TAKEOFF_PROPELLER;
            /* Visual effect is left at default (no effect) */
        }
        graphics {
            additional_text:                return string(STR_DESC_AIR_C124); //Additional text shown in purchase list
            default:                        spriteset_air_c124;
            mail_capacity:                  return 350;    // callback for setting capacity
            cost_factor:                    return 16;
            running_cost_factor:            return 2170;
        }
    }

    if (Aircraft_Ranges == 0) {
        item (FEAT_AIRCRAFT, item_air_c124)
        {
            property	
            {
                range: 0; 
            }
        }
    }
    if (Aircraft_Ranges == 1) {
        item (FEAT_AIRCRAFT, item_air_c124)
        {
            property	
            {
                range: 1298; 
            }
        }
    }
}